<SSO>
		<application name="WoodgroveBank.PendingTransactions">
		<description>SSO Affiliate application for the Pending Transactions Back End system </description>
    <contact>someone@microsoft.com</contact>

	<appUserAccount>
			<!--	
				Include the name of the group that is allowed to use this affiliate application
				as the value of this element. In a single server environment, this is typically
				BizTalk Application Users, referring to this group in the local machine. In a
				multi server environment, this is typically %DomainName%\BizTalk Application Users 
			-->
			BizTalk Application Users 
	</appUserAccount>

    <appAdminAccount>
			<!--	
				Include the name of the group that is allowed to administer this affiliate application
				as the value of this element.  In a single server environment, this is typically
				BizTalk Server Administrators, referring to this group in the local machine. In a
				Typically this is %DomainName%\BizTalk Server Administrators
			-->
			BizTalk Server Administrators

	</appAdminAccount>

    <field ordinal="0" label="user ID" masked="no" />
    <field ordinal="1" label="password" masked="yes" />
    <flags groupApp="no" configStoreApp="no" allowTickets="yes" validateTickets="yes" allowLocalAccounts="yes" timeoutTickets="yes" adminAccountSame="yes" enableApp="yes" />
  </application>
</SSO>
