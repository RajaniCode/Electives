<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>

  <log4net>
    <appender name="FileAppender" type="log4net.Appender.FileAppender,log4net">
      <file value="C:\Logs\PayPalLog.txt"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern
               value="%date [%thread] %level %logger - %message%newline"/>
      </layout>
    </appender>

    <root>
      <level value="DEBUG"/>
      <appender-ref ref="FileAppender"/>
    </root>
  </log4net>

  <system.diagnostics>
    <trace autoflush="true"/>
    <sources>
      <source name="Program">
        <listeners>
          <add name="text"
               type="System.Diagnostics.TextWriterTraceListener"
               initializeData="c:\Logs\PayPalDiagnosticsProgramLog.txt"/>
        </listeners>
      </source>
    </sources>   
  </system.diagnostics>

  <appSettings>
    <!-- Configure the SDK to use log4net -->
    <add key="PayPalLogKey" value="LOG4NET,DIAGNOSTICS"/>
    <add key="Debug" value="false"/>
  </appSettings>

