<UserControl x:Class="HyperlinkButtonDemoAppCS.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="500">

    <Grid x:Name="LayoutRoot" Background="Cornsilk" Height="300" Width="500">
        <Border BorderThickness="5" BorderBrush="Black"/>
        <HyperlinkButton Background="Yellow" Height="15" Width="175"
 		Margin="0,0,300,150" Content="Microsoft Web site" Foreground="Red" ToolTipService.ToolTip="Find Everything About Microsoft Here"
 		NavigateUri="http://www.microsoft.com" TargetName="_blank"/>
        <HyperlinkButton Background="Yellow" Height="15" Width="175"
 		Margin="0,0,300,50"  Content="Getting Started with Silverlight"
 		Foreground="Red" NavigateUri="http://silverlight.net/getstarted/"
 		TargetName="_blank" ToolTipService.ToolTip="Find Everything about Silverlight Here"/>
        <HyperlinkButton Background="Yellow" Height="15" Width="175" Margin="0,50,300,0" Content="Silverlight 2  Tutorials"
 		Foreground="Red" NavigateUri="http://silverlight.net/learn/tutorials.aspx" TargetName="_blank" ToolTipService.ToolTip="Find easy-to-learn Lessons and Tutorials on Silverlight Here"/>
    </Grid>
</UserControl>

