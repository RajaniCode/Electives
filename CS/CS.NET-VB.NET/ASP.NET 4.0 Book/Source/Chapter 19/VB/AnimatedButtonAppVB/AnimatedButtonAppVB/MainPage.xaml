<UserControl x:Class="AnimatedButtonAppVB.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="450">

    <Grid x:Name="LayoutRoot" Background="Red">
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <DoubleAnimation To="185" Duration="0:0:9"
 					Storyboard.TargetName="button1"
 					Storyboard.TargetProperty="Height"/>
                            <DoubleAnimation To="185" Duration="0:0:9"
					Storyboard.TargetName="button1"
 					Storyboard.TargetProperty="Width"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </Grid.Triggers>
        <Button x:Name="button1" Height="425" Width="425" Content="Silverlight and
 		ASP.NET" Background="DarkCyan" Foreground="Red" FontWeight="SemiBold"
 		FontSize="15"/>
    </Grid>

</UserControl>
